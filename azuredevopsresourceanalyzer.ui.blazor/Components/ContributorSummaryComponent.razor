@using azuredevopsresourceanalyzer.ui.blazor.Application.ViewModels
@if (Items == null || Items.Any())
{
    <table class="table-secondary">
        <thead>
        <tr>
            <th>Name</th>
            <th>Commits</th>
            <th>Last</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <h5><span class="badge badge-secondary" title="Commits">@item.ActivityCount</span></h5>
                    
                    <span class="badge badge-danger" title="Deletions">@item.ActivityDetails.Deletions</span>
                    <span class="badge badge-success" title="Additions">@item.ActivityDetails.Additions</span>
                </td>
                <td>@item.LastActivity?.ToString("M/d/yyy")</td>
            </tr>
        }
        </tbody>
    </table>
}
@code {
    [Parameter] public IEnumerable<ActivityItem<CommitDetail>> Items { get; set; }
}
